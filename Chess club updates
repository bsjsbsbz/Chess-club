-- Stats Tab
local Stats = Window:CreateTab("ðŸ“Š Analytics", "bar-chart")

Stats:CreateSection("Performance Stats")

local statsLabel = Stats:CreateLabel("ðŸ“ˆ Initializing stats...")

-- Update stats
task.spawn(function()
    while true do
        task.wait(3)
        if statsLabel then
            local state = getgenv().StealthChess.state
            local memory = getgenv().StealthChess.memory
            statsLabel:Set(f"Moves: {state.moves} | Phase: {state.phase} | Memory: {#memory.moves}")
        end
    end
end)

local resetBtn = Stats:CreateButton({
    Name = "ðŸ”„ Reset Stats",
    Callback = function()
